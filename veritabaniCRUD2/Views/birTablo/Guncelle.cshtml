@model veritabaniCRUD2.Models.birTablo

@{
    ViewData["Title"] = "Kişi Düzenleme";
}

<h1>Güncelleme</h1>
@ViewData["mesaj"]
<h4>birTablo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Guncelle">
            <input type="hidden" asp-for="Id" />

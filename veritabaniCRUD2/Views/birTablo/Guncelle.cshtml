                <label asp-for="isim" class="control-label">İsim</label>
                <input asp-for="isim" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ucret" class="control-label">Ücret</label>
                <input asp-for="ucret" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>